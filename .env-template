#// region [ rgba(250, 15, 100, 0.03)] Global Settings
PAGE_TITLE=xGPT
PAGE_ICON=ðŸ¤–
COOKIE_NAME=streamlit_auth 
COOKIE_KEY=your_cookie_key_here 
COOKIE_EXPIRY_DAYS=30
PREAUTHORIZED_USERS=preauthorized_users
# Basic Environments
DATASTORE=milvus
BEARER_TOKEN="" # disabled atm
#// endregion 
#// region [  rgba(250, 15, 100, 0.05)]
ALEPH_ALPHA_API_KEY=""
# OPENAI or AZURE or OPENROUTER
ENDPOINT=OPENAI

OPENAI_ENDPOINT=https://api.openai.com/v1/chat/completions
OPENAI_API_KEY=sk- # https://platform.openai.com/account/api-keys

AZURE_API_KEY=
AZURE_ENDPOINT=

OPENROUTER_API_KEY=
OPENROUTER_ENDPOINT=https://openrouter.ai/api/v1/chat/completions
# In case of Azure/OpenRouter endpoint, change this to your deployed model name
MODEL_NAME=gpt-4
# MODEL_NAME=openai/gpt-3.5-turbo-16k
MAX_TOKENS=8192
#// endregion

#// region [ rgba(50, 200, 150, 0.03)] Milvus Settings
MILVUS_HOST=127.0.0.1
MILVUS_PORT=19530
MILVUS_INDEX_NAME=default
MILVUS_COLLECTION=xgpt
#// endregion

#// region [ rgba(0, 250, 500, 0.03)] Default User Settings
WEAVIATE_AUTH_API_KEY=$OPENAI_API_KEY 
WEAVIATE_HOST=http://localhost:8080
WEAVIATE_APIKEY_USERS=xgpt
WEAVIATE_PORT=8080
WEAVIATE_SCHEME=http
#// endregion

#// region [ rgba(0, 250, 0, 0.03)] Default User Settings
ADMIN_USER=admin
ADMIN_FULL_NAME=admin
ADMIN_EMAIL=admin@xgpt.one
ADMIN_INIT_PW=changeme
#// endregion

#// region [ rgba(100, 0, 250, 0.03)] Docker Settings
DOCKER_IMAGE_NAME=xgpt_streamlit
DOCKER_IMAGE_VERSION=1.0
DOCKER_NETWORK=xgpt
#// endregion

#// region [ rgba(250, 200, 0, 0.03)] Database Settings
DATABASE_TYPE=postgres
DB_NAME=xgpt
DB_HOST=127.0.0.1
DB_PORT=5432
DB_USER=xgpt
DB_PASSWORD=xgpt
#// endregion

#// region [ rgba(250, 150, 100, 0.03)] Streamlit Settings
STREAMLIT_PAGE_TITLE=xGPT.One
STREAMLIT_PAGE_ICON=ðŸ¤–
STREAMLIT_PORT_1=8551
STREAMLIT_PORT_2=8552
#// endregion

#// region [ rgba(200, 0, 0, 0.03)] Environment Settings
ENV_MODE=PROD
#// endregion

#// region [ rgba(150, 100, 50, 0.03)] Docker Compose Settings
WEAVIATE_PORT=8080
WEAVIATE_QUERY_LIMIT=25
WEAVIATE_ANONYMOUS_ACCESS=true
WEAVIATE_PERSISTENCE_PATH=/var/lib/weaviate
WEAVIATE_VECTORIZER_MODULE=text2vec-openai
WEAVIATE_ENABLE_MODULES=text2vec-openai,generative-openai
WEAVIATE_CLUSTER_HOSTNAME=node1
WORK_DIR=/xgpt/streamlit
#// endregion
